.content {
  padding-bottom: 100rpx;
}
.form-wrap {
  margin: 30rpx 30rpx 80rpx 30rpx;
  font-size: 28rpx;
}
.form-wrap .regForm-item {
  margin-bottom: 40rpx;
}
.form-wrap .regForm-item .regForm-item-tit {
  font-size: 28rpx;
  font-weight: bold;
  color: #55545b;
  padding-bottom: 18rpx;
}
.form-wrap .regForm-item .regForm-item-tit .tips {
  color: #f5222d;
  padding-left: 8rpx;
}
.form-wrap .regForm-item .ipt {
  position: relative;
  display: block;
  padding: 0 10rpx;
  background: #f6f6f8;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 8rpx;
}
.form-wrap .regForm-item .set {
  width: 100%;
  height: 70rpx;
}
.form-wrap .regForm-item .textarea {
  height: 100rpx;
  line-height: 34rpx;
  width: 100%;
  box-sizing: border-box;
}
.form-wrap .regForm-item .fr {
  position: absolute;
  top: 5rpx;
  right: 16rpx;
}
.form-wrap .regForm-item .default {
  color: #808080;
}
.form-wrap .regForm-item .select {
  color: #333;
}
.submit {
  margin: 90rpx 30rpx 30rpx 30rpx;
  padding: 0;
  background: #4a85d3;
  color: #fff;
}
button:after {
  border: none;
}

