.logo {
  width: 100%;
}
.login {
  padding: 0rpx 15% 0 15%;
  font-size: 46rpx;
}
.login .list {
  padding: 0 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 100rpx;
  margin-bottom: 46rpx;
  font-size: 34rpx;
  border-bottom: 1rpx solid #C0C0C0;
}
.login .list .iconfont {
  display: block;
  font-size: 36rpx;
  color: #555;
  padding-right: 40rpx;
}
.login .list .ipt {
  width: 100%;
  padding: 14rpx 0;
}
.login button {
  margin-top: 88rpx;
  background: none;
  border: 2rpx solid #4a85d3;
  color: #4a85d3;
  border-radius: 14rpx;
}
.login button:after {
  border: none;
}
.login .button-hover {
  background-color: #4a85d3;
  color: #fff;
}

